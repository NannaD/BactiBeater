<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart1"
                    android:layout_width="289dp"
                    android:layout_height="289dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart2"
                    android:layout_width="289dp"
                    android:layout_height="289dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart3"
                    android:layout_width="289dp"
                    android:layout_height="289dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart4"
                    android:layout_width="289dp"
                    android:layout_height="289dp"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart5"
                    android:layout_width="289dp"
                    android:layout_height="289dp"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart6"
                    android:layout_width="289dp"
                    android:layout_height="289dp"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart7"
                    android:layout_width="289dp"
                    android:layout_height="289dp"/>

            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>