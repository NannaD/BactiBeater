<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dailyOverviewTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="false"
        android:text="@string/daily_overview"
        android:textColor="#00796B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart1"
                    android:layout_width="210dp"
                    android:layout_height="210dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart2"
                    android:layout_width="210dp"
                    android:layout_height="210dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart3"
                    android:layout_width="210dp"
                    android:layout_height="210dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart4"
                    android:layout_width="210dp"
                    android:layout_height="210dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart5"
                    android:layout_width="210dp"
                    android:layout_height="210dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart6"
                    android:layout_width="210dp"
                    android:layout_height="210dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/overviewPieChart7"
                    android:layout_width="210dp"
                    android:layout_height="210dp" />

            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <Button
        android:id="@+id/goBackB"
        android:layout_width="85dp"
        android:layout_height="38dp"
        android:layout_marginStart="532dp"
        android:layout_marginLeft="532dp"
        android:background="#80CBC4"
        android:shadowColor="#B2DFDB"
        android:text="@string/go_back"
        android:textAllCaps="false"
        android:textColor="#00796B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957" />

    <Button
        android:id="@+id/exitB"
        android:layout_width="85dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#80CBC4"
        android:shadowColor="#B2DFDB"
        android:text="@string/exit"
        android:textAllCaps="false"
        android:textColor="#00796B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/goBackB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957" />
</androidx.constraintlayout.widget.ConstraintLayout>